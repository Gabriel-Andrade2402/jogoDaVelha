package game.board;

public class Board {
	private String[][] board = new String[3][3];
	public Board() {	
	}
	private boolean Play(String play,String identify) {
		play=decipherPlay(play);
		if(checkPlay(play)) {
			if(identify == "player") {
				board[Integer.parseInt(play.split("")[0])][Integer.parseInt(play.split("")[1])] = "X";
			}else if(identify == "computer") {
				board[Integer.parseInt(play.split("")[0])][Integer.parseInt(play.split("")[1])] = "O";
			}
			
			return true;
		}else {
			return false;
		}
	}
	
	private String decipherPlay(String play) {
		String[] caracts = play.split("");
		if(caracts[0]=="A"||caracts[0]=="a") {
			return "1"+caracts[1];
		}else if(caracts[0]=="B"||caracts[0]=="b") {
			return "2"+caracts[1];
		}else if(caracts[0]=="C"||caracts[0]=="c") {
			return "3"+caracts[1];
		}else {
			return null;
		}
	}
	private boolean checkPlay(String play) {
		Integer column =Integer.parseInt(play.split("")[0]);
		Integer line = Integer.parseInt(play.split("")[1]);
		if(board[column][line]!=null) {
			return false;
		}else {
			return true;
		}
	}
	private String checkSituation() {
		for(int i = 1 ;i<3 ;i++) {
			String mark = null;
			if(i==1)mark="X";
			if(i==2)mark="O";
			//Check Lines
			for(int line = 0 ; line <3; line++) {
				if(board[line][0] == mark && board[line][1] == mark && board[line][2] == mark) {
					if(mark == "X") {
						return "Vitória do Jogador";
					}else {
						return "Vitória do Computador";
					}
				}
			}
			//Check Columns
			for(int column  = 0 ; column <3; column++) {
				if(board[0][column] == mark && board[1][column] == mark && board[2][column] == mark) {
					if(mark == "X") {
						return "Vitória do Jogador";
					}else {
						return "Vitória do Computador";
					}
				}
			}
			//Check diagonals
			if(board[0][0]==mark && board[1][1]==mark && board[2][2]==mark) {
				if(mark == "X") {
					return "Vitória do Jogador";
				}else {
					return "Vitória do Computador";
				}
			}
			if(board[0][2]==mark && board[1][1]==mark && board[2][0]==mark) {
				if(mark == "X") {
					return "Vitória do Jogador";
				}else {
					return "Vitória do Computador";
				}
			}
		}
		//Check all spaces
		for(int line = 0 ; line <3; line++) {
			for(int column  = 0 ; column <3; column++) {
				if(board[line][column]==null) {
					return "continue";
				}
			}
		}
		return "Empate";
	}
}
